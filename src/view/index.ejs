<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Table Example</title>
        <style>
            img {
                width: 100px;
                object-fit: cover;
            }
        </style>
    </head>
    <body>
        <h1>Product Table</h1>
        <table border="1">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Image</th>
                    <th>CreatedAt</th>
                </tr>
            </thead>
            <tbody>
                <% for (let i = 0; i < product.length; i++) { %>
                <tr>
                    <td><%= product[i].id %></td>
                    <td><%= product[i].name %></td>
                    <td><%= product[i].price %></td>
                    <td><img src="<%= product[i].image %>" /></td>
                    <td><%= product[i].createdAt %></td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </body>
</html>
